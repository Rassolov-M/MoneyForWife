<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLayout"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewWhoMoney"
        android:layout_width="366dp"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:text="@string/text_view_who_money"
        android:textAlignment="center"
        android:textColor="@color/colorTextView"
        android:textSize="21sp"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/style_text_view"
        android:paddingTop="7dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorTextTotal"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewWhoMoney"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="@+id/textViewWhoMoney"
        app:layout_constraintTop_toBottomOf="@+id/textViewWhoMoney" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/style_btn"
        android:text="@string/giveItBack"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotal" />

    <Spinner
        android:id="@+id/spinnerMoney"
        android:layout_width="82dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/style_spiner"
        android:entries="@array/currency"
        android:outlineSpotShadowColor="@color/colorTextTotal"
        app:layout_constraintEnd_toEndOf="@+id/textViewWhoMoney"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewTotal"
        app:layout_constraintTop_toBottomOf="@+id/textViewWhoMoney" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/style_btn"
        android:text="@string/restart"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/buttonGo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonGo"
        app:layout_constraintTop_toBottomOf="@+id/buttonGo" />

</androidx.constraintlayout.widget.ConstraintLayout>